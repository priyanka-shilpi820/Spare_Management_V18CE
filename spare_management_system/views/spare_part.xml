    <!-- Form View -->
    <record id="view_spare_part_form" model="ir.ui.view">
        <field name="name">spare.part.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>

        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <group>
                    <field name="part_number"/>
                    <!--                        <field name="part_name"/>-->
                    <field name="description"/>
                    <field name="brand"/>
                    <field name="model_name"/>
                </group>
            </xpath>
            <xpath expr="//notebook/page[@name='purchase']" position="after">

                <page string="Common Vehicles">
                    <field name="vehicle_ids">
                        <list editable="bottom">
                            <!--            <field name="makes"/>-->
                            <field name="models"/>
                            <field name="start_year"/>
                            <field name="end_year"/>
                        </list>
                    </field>
                </page>
            </xpath>
        </field>

    </record>

    <!-- Action -->
    <record id="action_spare_parts" model="ir.actions.act_window">
        <field name="name">SpareParts</field>
        <field name="res_model">product.template</field>

        <field name="view_mode">list,form</field>
    </record>
</odoo>