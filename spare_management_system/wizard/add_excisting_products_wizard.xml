<odoo>
    <record id="view_add_existing_products_wizard_form" model="ir.ui.view">
        <field name="name">add.products.wizard.form</field>
        <field name="model">add.products.wizard</field>
        <field name="arch" type="xml">
            <form string="Add Existing Products">
                <group>
                    <field name="product_ids" widget="many2many_tags"/>
                </group>
                <footer>
                    <button name="action_add_products" type="object" string="Add" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>