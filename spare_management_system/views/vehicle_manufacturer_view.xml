<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_vehicle_manufacturer_list" model="ir.ui.view">
        <field name="name">vehicle.manufacturer.list</field>
        <field name="model">vehicle.manufacturer</field>
        <field name="arch" type="xml">
            <list string="Manufacturers">
                <field name="name"/>
                <field name="country"/>
                <field name="website"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_vehicle_manufacturer_form" model="ir.ui.view">
        <field name="name">vehicle.manufacturer.form</field>
        <field name="model">vehicle.manufacturer</field>
        <field name="arch" type="xml">
            <form string="Manufacturer">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="country"/>
                        <field name="website"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_vehicle_manufacturer" model="ir.actions.act_window">
        <field name="name">Manufacturers</field>
        <field name="res_model">vehicle.manufacturer</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>