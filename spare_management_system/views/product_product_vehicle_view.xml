<odoo>
  <record id="view_product_vehicle_compat_form" model="ir.ui.view">
    <field name="name">product.product.form.vehicle.compat</field>
    <field name="model">product.product</field>
    <field name="inherit_id" ref="product.product_normal_form_view"/>
    <field name="arch" type="xml">
      <xpath expr="//page[@name='inventory']" position="after">
            <page string="Compatible Vehicles">
                <field name="compatible_vehicle_ids" widget="many2many_tags"/>
                <field name="compatible_vehicle_ids">
                    <list editable="bottom">
                        <field name="make"/>
                        <field name="model_name"/>
                        <field name="model_year"/>
                    </list>
                </field>
            </page>
        </xpath>
    </field>
  </record>
</odoo>